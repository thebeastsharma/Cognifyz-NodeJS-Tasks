<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>User Registration</title>

  <!-- Bootstrap -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />

  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <!-- Header -->
  <header class="bg-primary text-white text-center py-4 shadow-sm animate-slide">
    <h1>User Registration Portal</h1>
    <p class="lead">Please fill in your details below</p>
  </header>

  <!-- Form -->
  <div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <form id="userForm" action="/submit" method="POST" class="card p-4 shadow-lg rounded-4 animate-fade">
          <div class="mb-3">
            <label class="form-label">Full Name</label>
            <input type="text" name="name" id="name" class="form-control" placeholder="Enter your full name" required />
          </div>

          <div class="mb-3">
            <label class="form-label">Email address</label>
            <input type="email" name="email" id="email" class="form-control" placeholder="example@email.com" required />
          </div>

          <div class="mb-3">
            <label class="form-label">Age</label>
            <input type="number" name="age" id="age" class="form-control" placeholder="Enter your age" required />
          </div>

          <button type="submit" class="btn btn-primary w-100">Submit</button>
        </form>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="text-center text-muted py-3">
    &copy; 2025 Cognifyz Technologies | Responsive Form Demo
  </footer>

  <script>
    // Client-side validation
    document.getElementById('userForm').addEventListener('submit', function(e) {
      const name = document.getElementById('name').value.trim();
      const email = document.getElementById('email').value.trim();
      const age = parseInt(document.getElementById('age').value);

      if (name.length < 3) { alert('Name must be at least 3 characters.'); e.preventDefault(); return; }
      if (!email.includes('@')) { alert('Enter a valid email.'); e.preventDefault(); return; }
      if (isNaN(age) || age < 10 || age > 100) { alert('Age must be 10â€“100.'); e.preventDefault(); return; }
    });
  </script>
</body>
</html>
